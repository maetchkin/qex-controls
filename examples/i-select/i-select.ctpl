i-select-example__filter
    CTPL-SUITE Filter
        CTPL-CODE Define collection
            SET $collection (new Backbone.Collection([
                    {"value": 1, "label":"One"},
                    {"value": 2, "label":"Two"},
                    {"value": 3, "label":"Three"},
                    {"value": 4, "label":"Four"},
                    {"value": 5, "label":"Five"}
                ]))

        CTPL-CODE define filter function
            i::select (
                {
                    "options": $collection,
                    "filter":  function(item){
                        return item.get('value') > 1 && item.get('value') < 5;
                    }
                }
            ) AS $filteredSelect
            CTPL-TEST test filter
                expect( $filteredSelect, 'check initial state' ).to.be.an.instanceof(Backbone.Model);
                var $options = $filteredSelect.get('options');
                expect( $options, 'check options' ).to.be.an.instanceof(Backbone.Collection).and.to.be.equal($collection);

                expect($filteredSelect.get('index'),    'check index'   ).to.be.an.instanceof(Backbone.Collection).and.to.have.property('length', 3);
                expect($filteredSelect.get('selected'), 'check selected').to.be.an('array').and.to.be.empty();
                expect($filteredSelect.get('value'),    'check value'   ).to.be.null;
                expect($filteredSelect.get('label'),    'check label'   ).to.equal($filteredSelect.get("placeholder"));

                $filteredSelect.select($collection.at(0));
                expect($filteredSelect.get('selected'), 'check selected').to.be.an('array').and.to.be.empty();
                expect($filteredSelect.get('value'),    'check value'   ).to.be.null;
                expect($filteredSelect.get('label'),    'check label'   ).to.equal($filteredSelect.get("placeholder"));

                $filteredSelect.select($collection.at(1));
                expect($filteredSelect.get('selected'), 'check selected').to.be.an('array').and.to.have.property('length', 1);
                expect($filteredSelect.get('value'),    'check value'   ).to.be.an.instanceof(Backbone.Model);
                expect($filteredSelect.get('label'),    'check label'   ).to.equal($collection.at(1).get("label"));

                $filteredSelect.reset();
                expect($filteredSelect.get('index'),    'check index'   ).to.be.an.instanceof(Backbone.Collection).and.to.have.property('length', 3);
                expect($filteredSelect.get('selected'), 'check selected').to.be.an('array').and.to.be.empty();
                expect($filteredSelect.get('value'),    'check value'   ).to.be.null;
                expect($filteredSelect.get('label'),    'check label'   ).to.equal($filteredSelect.get("placeholder"));

i-select-example__sort
    CTPL-SUITE Sort
        CTPL-CODE Define collection
            SET $collection (new Backbone.Collection([
                    {"value": 1, "label": "One"  },
                    {"value": 2, "label": "Two"  },
                    {"value": 3, "label": "Three"},
                    {"value": 4, "label": "Four" },
                    {"value": 5, "label": "Five" }
                ]))
        CTPL-CODE define sort function
            i::select (
                {
                    "options": $collection,
                    "sort":  function(a, b){
                        return a.get('value') < b.get('value');
                    }
                }
            ) AS $sortedSelect
            CTPL-TEST test sort
                expect( $sortedSelect, 'check initial state' ).to.be.an.instanceof(Backbone.Model);
                var $options = $sortedSelect.get('options');
                expect( $options, 'check options' ).to.be.an.instanceof(Backbone.Collection).and.to.be.equal($collection);
                expect(
                    $sortedSelect.get('index').map(
                        function(item){
                            return $options.get(item.get('id')).get('value');
                        }
                    ),
                    'check index is sorted'
                )
                    .to.be.an('array').and
                    .to.eql( [5, 4, 3, 2, 1] );

